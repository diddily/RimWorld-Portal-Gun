  <RecipeDef>
    <defName>PG_Craft_BatteryModule</defName>
    <label>craft battery module</label>
    <description>Craft a battery module for a portal gun</description>
    <jobString>Crafting</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>70</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <PG_BatteryModule>1</PG_BatteryModule>
    </products>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers Inherit="False">
      <li>FabricationBench</li>
    </recipeUsers>
    <researchPrerequisite>PG_BatteryModuleResearch</researchPrerequisite>
  </RecipeDef>

